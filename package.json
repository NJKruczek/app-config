{
  "name": "@servall/app-config",
  "description": "Configuration file loader with JSON schema support",
  "version": "1.0.8",
  "license": "MPL-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "app-config": "dist/cli.js"
  },
  "author": {
    "name": "Servall Development",
    "email": "admin@servalldev.com",
    "url": "https://www.servalldev.com"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "cli": "ts-node src/cli.ts",
    "test": "jest",
    "lint": "tslint src/**/*.ts src/*.ts",
    "fix": "yarn lint --fix",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@iarna/toml": "2",
    "ajv": "6",
    "common-tags": "1",
    "execa": "1",
    "fs-extra": "7",
    "js-yaml": "3",
    "json-schema-ref-parser": "6",
    "json5": "2",
    "lodash": "4",
    "pretty-error": "2",
    "quicktype-core": "6",
    "yargs": "13"
  },
  "devDependencies": {
    "@types/common-tags": "1",
    "@types/execa": "0.9",
    "@types/fs-extra": "7",
    "@types/jest": "24",
    "@types/js-yaml": "3",
    "@types/json-schema": "^7.0.2",
    "@types/json5": "0.0.30",
    "@types/lodash": "4",
    "@types/node": "8",
    "@types/tmp": "0.0.33",
    "@types/yargs": "13",
    "jest": "24",
    "tmp-promise": "1",
    "ts-jest": "24",
    "ts-node": "8",
    "tslint": "5",
    "tslint-config-airbnb": "5",
    "tslint-eslint-rules": "5",
    "typescript": "3"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": null,
    "testRegex": "(tests/.*|src/.*\\.test)\\.(ts|js)$",
    "testPathIgnorePatterns": [
      "node_modules",
      ".yarn-cache"
    ],
    "modulePathIgnorePatterns": [
      "node_modules",
      ".yarn-cache"
    ]
  }
}
