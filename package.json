    "app-config": "dist/cli.js"
  },
  "author": {
    "name": "Servall Development",
    "email": "admin@servalldev.com",
    "url": "https://www.servalldev.com"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "cli": "ts-node src/cli.ts",
    "coverage": "jest --coverage",
    "lint": "yarn lint:ts",
    "fix": "yarn fix:ts",
