    "@types/yargs": "^12",
    "jest": "^22",
    "ts-jest": "^23",
    "ts-node": "^3",
    "tslint": "^5",
    "tslint-config-airbnb": "^5",
    "tslint-eslint-rules": "^5",
    "typescript": "^3"
  },
  "engines": {
    "node": ">=6.0.0"
