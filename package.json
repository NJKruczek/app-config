{
  "name": "@servall/app-config",
  "version": "0.1.0",
  "description": "Configuration loader supporting types + validation + hierarchy + lists",
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "app-config": "lib/cli.js"
  },
  "author": {
    "name": "Servall Development",
    "email": "admin@servalldev.com",
    "url": "https://www.servalldev.com"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "cli": "ts-node src/cli.ts",
    "coverage": "jest --coverage",
    "lint": "yarn lint:ts",
    "fix": "yarn fix:ts",
    "lint:ts": "tslint src/**/*.ts src/**/*.tsx",
    "fix:ts": "yarn lint:ts --fix",
